<button 
  type="button"
  class="wishlist-btn group relative z-10 p-2"
  onclick="toggleWishlist('{{ product.id }}', '{{ product.handle }}', this)"
  data-product-id="{{ product.id }}"
  aria-label="Add to wishlist"
>
  <svg class="w-6 h-6 icon-empty transition-colors group-hover:text-yellow-500" 
       fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
  </svg>

  <svg class="w-6 h-6 icon-filled text-yellow-500 hidden" 
       fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
  </svg>
</button>